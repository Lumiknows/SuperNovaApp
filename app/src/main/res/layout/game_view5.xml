<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111">

    <!-- Video Preview -->
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/play_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/pauseBtn"
            android:layout_width="298dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/pause_button"
            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/muteBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/mute"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/unmuteBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/unmute"
            android:visibility="invisible" />
    </FrameLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="225dp"
        android:layout_marginBottom="80dp"
        android:clipToPadding="false">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:backgroundTint="#1A1A1A">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- Game Title -->
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crimson Desert"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Price -->
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="₱59.99"
                    android:textColor="#A6E964"
                    android:textSize="18sp" />

                <!-- Studio and Date -->
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="20dp">

                    <TextView
                        android:id="@+id/studio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Pearl Abyss"
                        android:textColor="#BBBBBB"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/date"
                        android:paddingLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="  Coming 2025"
                        android:textColor="#BBBBBB"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#DDDDDD"
                    android:textSize="14sp"
                    android:text="Crimson Desert is an open-world action-adventure RPG set in the war-torn lands of Pywel. As mercenary Macduff, fight for survival and lead your band through brutal battles, immersive storytelling, and dynamic combat in a visually stunning fantasy world." />

                <!-- Tags -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/tag_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="Action"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/tag_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="Open World"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/tag_background"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:text="Fantasy"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- System Requirements -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="System Requirements\n\nMinimum:\n- OS: Windows 10 64-bit\n- CPU: Intel Core i5-8400 or AMD Ryzen 5 2600\n- GPU: NVIDIA GeForce GTX 1060 or AMD RX 580\n- RAM: 12 GB\n- Storage: 70 GB SSD\n- DirectX: Version 12\n\nRecommended:\n- OS: Windows 10/11 64-bit\n- CPU: Intel Core i7-9700K or AMD Ryzen 7 3700X\n- GPU: NVIDIA GeForce RTX 3060 Ti or AMD RX 6700 XT\n- RAM: 16 GB\n- Storage: 70 GB SSD\n- DirectX: Version 12"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

                <!-- Reviews -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="User Reviews"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="#1E1E1E"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ ★ ★ ★ ★"
                        android:textColor="#FFD700"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The trailers look absolutely insane. I can't wait to explore this massive world. Hoping it lives up to the hype!"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- darksoul_hunter"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="#1E1E1E"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ ★ ★ ★ ★"
                        android:textColor="#FFD700"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masterpiece. It's like playing a movie. Can't wait for the sequel!"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- dragonblade77"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Review 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="#1E1E1E"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ ★ ★ ☆ ☆"
                        android:textColor="#FFD700"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Looks great but performance needs work on mid-range PCs. Still enjoyed it though!"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- pixelwitch"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

                <!-- Review 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="#1E1E1E"
                    android:elevation="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ ★ ★ ★ ☆"
                        android:textColor="#FFD700"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A solid experience. Great story and character design. Minor bugs here and there."
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="- elena98"
                        android:textColor="#888888"
                        android:textSize="12sp"
                        android:layout_marginTop="6dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/like_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/like"
            android:contentDescription="Like" />

        <ImageButton
            android:id="@+id/wish_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:src="@drawable/bookmark"
            android:contentDescription="Wish" />

        <Button
            android:id="@+id/addtocart"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:backgroundTint="#A6E964"
            android:text="Add to Cart"
            android:textColor="#FFFF"
            app:cornerRadius="10dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
